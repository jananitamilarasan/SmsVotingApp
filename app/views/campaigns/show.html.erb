<h2 class="cntr_align_txt"> <%=@campaign.name%></h2>
<div class="CSSTableGenerator" >
  <table >
    <tr>
      <td> CHOICE  </td>
      <td > SCORES </td>
      <td >INVALID SCORES </td>
    </tr>                          
  <%@campaign_choice_logs && @campaign_choice_logs.group_by {|ri| ri.choice.id}.each do |type, rec_items|%>

    <tr>
      <td >
        <%=Choice.find(type).name%>
      </td>
      <td>
        <%=CampaignChoiceLog.scores(rec_items.map(&:id)).count%>
      </td>
     <td>                    
      <%=CampaignChoiceLog.invalid_scores(rec_items.map(&:id)).count%>
      </td>
    </tr>
   <%end%>
 
 </table>
</div>
